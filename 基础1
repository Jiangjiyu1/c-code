#include<string.h>
struct BOOK
{
    char name[20];
    int price;
};
int main()
{
    struct BOOK b1={"C语言程序设计",55};
    strcpy(b1.name,"C++");
    printf("书名:%s\n",b1.name);
    printf("价格:%d\n",b1.price);
    return 0;
}
